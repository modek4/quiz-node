<header class="header">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="navbar-open"
    aria-label="<%=messages['navbar_open']%>"
    role="button">
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
  </svg>
  <div class="search hidden-accessible" role="search">
    <label id="search-input-label" for="search-input" class="hidden-accessible"
      ><%=messages['search']%></label
    >
    <input
      type="text"
      placeholder="<%=messages['search_placeholder']%>"
      class="search-input"
      name="search-input"
      id="search-input"
      aria-labelledby="search-input-label"
      aria-description="<%=messages['search_description']%>" />
  </div>
</header>
<section class="account">
  <h1 class="hidden-accessible"><%= messages['account_title'] %></h1>
  <ul class="account-list_account" role="list">
    <li class="account-list_account-nickname" role="listitem">
      <h2><%= messages['account_nickname'] %></h2>
      <div class="account-list_account-content">
        <label for="nickname"><%= messages['account_nickname_label'] %></label>
        <input
          type="text"
          class="input"
          id="nickname"
          name="nickname"
          placeholder="<%= user.name %>"
          value="<%= user.name %>"
          aria-label="<%= user.name %>"
          readonly />
        <button
          type="button"
          data-id="<%= user.id %>"
          data-field="name"
          data-type="text"
          data-button="edit"
          aria-label="Edit"
          role="button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        </button>
      </div>
    </li>
    <li class="account-list_account-activation_code" role="listitem">
      <h2><%= messages['account_activation_code'] %></h2>
      <div class="account-list_account-content">
        <label for="activation_code"><%= messages['account_activation_code_label'] %></label>
        <input
          type="text"
          class="input"
          id="activation_code"
          name="activation_code"
          placeholder="<%= user.code %>"
          value="<%= user.code %>"
          aria-label="<%= user.code %>"
          readonly />
        <button
          aria-label="Copy code"
          role="button"
          type="button"
          data-value="<%= user.code %>"
          data-button="copy">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75"></path>
          </svg>
        </button>
      </div>
    </li>
    <li class="account-list_account-password" role="listitem">
      <form id="change_password_form">
        <h2><%= messages['account_password'] %></h2>
        <label for="password_current"><%= messages['password_current'] %></label>
        <input
          type="password"
          class="input"
          id="password_current"
          name="password_current"
          placeholder="..."
          aria-label="<%= messages['password_current'] %>"
          required />
        <label for="password_new"><%= messages['password_new'] %></label>
        <input
          type="password"
          class="input"
          id="password_new"
          name="password_new"
          placeholder="..."
          aria-label="<%= messages['password_new'] %>"
          required />
        <label for="password_new_repeat"><%= messages['password_new_repeat'] %></label>
        <input
          type="password"
          class="input"
          id="password_new_repeat"
          name="password_new_repeat"
          placeholder="..."
          aria-label="<%= messages['password_new_repeat'] %>"
          required />
        <input
          type="submit"
          class="button"
          id="change_password"
          value="<%= messages['change_password'] %>"
          aria-label="<%= messages['change_password'] %>" />
      </form>
    </li>
    <li class="account-list_account-email" role="listitem">
      <form id="change_email_form">
        <h2><%= messages['account_email'] %></h2>
        <label for="email_current"><%= messages['account_email_label'] %></label>
        <input
          type="email"
          class="input"
          id="email_current"
          name="email_current"
          placeholder="<%= messages['account_email_placeholder'] %>"
          aria-label="<%= messages['account_email_label'] %>"
          required />
        <label for="email_new"><%= messages['account_email_new_label'] %></label>
        <input
          type="email"
          class="input"
          id="email_new"
          name="email_new"
          placeholder="<%= messages['account_email_new_placeholder'] %>"
          aria-label="<%= messages['account_email_new_label'] %>"
          required />
        <label for="email_password"><%= messages['password_current'] %></label>
        <input
          type="password"
          class="input"
          id="email_password"
          name="email_password"
          placeholder="..."
          aria-label="<%= messages['password_current'] %>"
          required />
        <input
          type="submit"
          class="button"
          id="change_email"
          value="<%= messages['account_email'] %>" />
      </form>
    </li>
    <li role="listitem">
      <label class="switch">
        <input type="checkbox" class="checkbox" data-id="random" id="switch-random" <%=
        user.settings.random ? 'checked' : '' %> />
        <div class="slider"></div>
        <span><%= messages['account_random'] %></span>
      </label>
    </li>
    <li role="listitem">
      <label class="switch">
        <input type="checkbox" class="checkbox" data-id="autosave" id="switch-autosave" <%=
        user.settings.autosave ? 'checked' : '' %>/>
        <div class="slider"></div>
        <span><%= messages['account_autosave'] %></span>
      </label>
    </li>
    <li role="listitem">
      <label class="switch">
        <input type="checkbox" class="checkbox" data-id="explanation" id="switch-explanation" <%=
        user.settings.explanation ? 'checked' : '' %>/>
        <div class="slider"></div>
        <span><%= messages['account_explanation'] %></span>
      </label>
    </li>
    <li role="listitem">
      <label class="switch">
        <input type="checkbox" class="checkbox" data-id="open_question" id="switch-open_question"
        <%= user.settings.open_question ? 'checked' : '' %>/>
        <div class="slider"></div>
        <span><%= messages['account_open'] %></span>
      </label>
    </li>
    <li role="listitem">
      <label class="switch">
        <input type="checkbox" class="checkbox" data-id="darkmode" id="switch-darkmode" <%=
        user.settings.darkmode ? 'checked' : '' %>/>
        <div class="slider"></div>
        <span><%= messages['account_darkmode'] %></span>
      </label>
    </li>
    <li role="listitem">
      <label class="switch">
        <input type="checkbox" class="checkbox" data-id="livecheck" id="switch-livecheck" <%=
        user.settings.livecheck ? 'checked' : '' %>/>
        <div class="slider"></div>
        <span><%= messages['account_livecheck'] %></span>
      </label>
    </li>
  </ul>
</section>
